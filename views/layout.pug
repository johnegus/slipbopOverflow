doctype html
html
    head
        title SlipBop Overflow
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet" href="https://unpkg.com/purecss@2.0.3/build/pure-min.css" integrity="sha384-cg6SkqEOCV1NbJoCu11+bm0NvBRc8IYLRGXkmNrqUBfTjmMYwNKPWBTIKyw9mHNJ" crossorigin="anonymous")
        link(rel="stylesheet" href="https://unpkg.com/purecss@1.0.1/build/base-min.css")
        link(rel="stylesheet" type="text/css" href="/css/style.css")
        script(src="/js/index.js")
        script(src="https://kit.fontawesome.com/087b3c0ec0.js" crossorigin="anonymous")
    body
      nav.navbar
        div(id="links-left") 
          a
            i(id="hamburger" class="fa fa-bars icon")
          a(class="logo" href="")
            img(src="../images/logo.png")
          a(class="desktop-links" href="") Home
          a(class="desktop-links" href="") Questions
          a(class="desktop-links" href="") Users
          a
            i(id="search-icon" class="fa fa-search icon") 
        div(id="desktop-searchBar")
          form(action="/search")
            input(type="text" placeholder="Search..." name="search")
            button(type="submit")
              i(class="fa fa-search")
        div(id="links-right")
          a(class="pure-button button-right" href="/login") Login
          a(class="pure-button button-right") Sign Up
      div(id="links")
        a(href="") Home
        a(href="") Questions
        a(href="") Users    
      div(id="mobile-searchBar")
        form(action="/search")
          input(id="mobile-search" type="text" placeholder="Search..." name="search")
      footer.footer
        div
          span.footer-text SlipBop Overflow
          div.footer-icons
            i(class="fa fa-github")
            i(class="fa fa-github")
            i(class="fa fa-github")
            i(class="fa fa-github")
