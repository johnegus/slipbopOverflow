link(rel="stylesheet", href="/css/login.css")



script(src="/js/login.js")

.container
    .form-div
        form.pure-form(action="/login", method="post" id="login-form")
            .inner-form-div
                .group
                    label.slipbop-label(for="email") Email
                    input.slipbop-input(type="email", name="email", id="email")
                .group
                    label.slipbop-label(for="password") Password
                    input.slipbop-input(type="password", id="password", name="password")
                .group
                    button.slipbop-button.pure-button.pure-button-primary(type="submit") Login